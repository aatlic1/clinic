@model Doctor

@{
    ViewData["Title"] = "Doctor";
}

<div class="card mb-4 shadow-sm">
    <div class="row g-0">
        <div class="col-auto">
            <img class="card-img-top" width="100%" height="225" src="https://t4.ftcdn.net/jpg/02/29/53/11/360_F_229531197_jmFcViuzXaYOQdoOK1qyg7uIGdnuKhpt.jpg" alt="Card image cap">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title">@Model.Name @Model.Surname</h2>
                <h5 class="card-subtitle mb-2 text-muted">@Model.Code</h5>
                <p class="card-text">@Model.Title</p>
            </div>
        </div>
    </div>
</div>
