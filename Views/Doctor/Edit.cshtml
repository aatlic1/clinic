@{
}

<form method="post" asp-action="Edit">
    <div class="form-row form-group">
        <div class="col">
            <input asp-for="Name" class="form-control form-control-lg" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row form-group">
        <div class="col">
            <input asp-for="Surname" class="form-control form-control-lg" placeholder="Surname" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row form-group">
        <div class="col">
            <select asp-for="Title" asp-items="@Html.GetEnumSelectList<Title>()" class="form-control">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row form-group">
        <div class="col">
            <input asp-for="Code" class="form-control form-control-lg" placeholder="Code" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row form-group">
        <div class="col">
            <button class="btn btn-block btn-success btn-lg" type="submit">Create Account</button>
        </div>
    </div>
</form>
